generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  username  String  @unique
  password  String
  firstname String?
  lastname  String?
  files     File[]
}

model Doctor {
  id        String  @id @default(cuid())
  username  String  @unique
  password  String
  firstname String?
  lastname  String?
}

model File {
  id        Int    @id @default(autoincrement())
  userId    String 
  filename  String @unique
  mimettype String
  encoding  String
  data      Bytes
  users     User   @relation(fields: [userId], references: [id])
}
